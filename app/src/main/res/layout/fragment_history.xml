<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:padding="16dp"
    android:background="@color/blue">

    <!-- TabLayout for Top Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_layout_background"
        app:tabGravity="fill"
        app:tabIndicatorColor="@android:color/white"
        app:tabMode="fixed"
        app:tabTextColor="@color/white">
        <!-- Tab Items -->
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoàn Thành" />
        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabCancelled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã Huỷ" />
    </com.google.android.material.tabs.TabLayout>

    <!-- Container for ViewPager2 with white background and border -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
    android:background="@drawable/border_background"> <!-- Áp dụng drawable bo viền -->

    <!-- ViewPager2 for Fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPageHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>

    </LinearLayout>
